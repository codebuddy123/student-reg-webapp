pipeline {
    agent any

    environment{
        SONARQUBE_URL = 'http://40.192.67.215:8081/'
        SONARQUBE_TOKEN = 'sonarcredentials'
        TOMCAT_URL = '172.31.38.104'
        TOMCAT_USER = 'ec2-user'
    }

    
    tools {
        maven 'maven-3.9.10' // Specify the Maven version
       
    }
    stages {
        stage('Git Checkout') {
            steps {
                git 'https://github.com/codebuddy123/student-reg-webapp.git'
            }
        }
        stage('Build the Package') {
            steps {
                sh 'mvn package' //  Use Maven for building the package
            }
        }
        stage('Run Sonar Analysis') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.projectKey=student-reg-webapp -Dsonar.host.url=${SONARQUBE_URL} -Dsonar.login=${SONARQUBE_TOKEN}'
            }
        }
        stage('Upload to Nexus') { 
            steps {
                sh 'mvn deploy' // Command to upload artifact to Nexus
            }
        } 
        // Stage to upload the artifact to Tomcat server
        stage('Upload Artifact to Tomcat Server') {
            steps {
                sshagent(['tomcat-server']) {
                    
                    sh 'echo "Cleaning up old artifact on Tomcat server..."'
                    sh 'rm -f /opt/tomcat/webapps/student-reg-webapp.war"' 
                    sh 'echo "Uploading artifact to Tomcat server..."'
                    sh 'scp -o StrictHostKeyChecking=no target/student-reg-webapp.war ${TOMCAT_USER}@${TOMCAT_URL}:/opt/tomcat/webapps/' 
                    
                }
                
            }
        }
    }

    post {
        success {
            slackSend(channel: 'app-jenkins', message: "Build Successful: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
            mail to: 'varungopal286@gmail.com', subject: "Build Successful: ${env.JOB_NAME}", body: "The build was successful."
        }
        failure {
            slackSend(channel: 'app-jenkins', message: "Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
            mail to: 'varungopal286@gmail.com', subject: "Build Failed: ${env.JOB_NAME}", body: "The build has failed."
        }
    }
}
